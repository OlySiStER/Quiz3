<body>
    <h1><center>Welcome to Users Management System.</center></h1>
    <br>
    <center>
    <a href="/">Insert user.</a> &nbsp
    <a href="/users"> View user.</a> &nbsp
    <a href="/users/searchuser">Search user by firstname.</a>  &nbsp
    <strong>
    Search user by role.
    </strong>
    <br><br>
    
    {{!-- <form action="/users/role/" method="post"> --}}
        Role: 
        <select name="srole" id="srole">
            <option value="admin">Admin</option>
            <option value="user">User</option>
        </select> <br><br>
        <button type="submit" id="btnsubmit">Search</button>

        <script>
            $(function(){
                var searchRole = $('#srole').val();
                $('#srole').change(function(){
                    searchRole = $(this).val();
                });

                $('#btnsubmit').click(function(){
                    window.location.href = "/user/role/"+searchRole;
                });
               
            });
        </script>
    {{!-- </form> --}}

</body>
